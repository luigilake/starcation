<h1>New Celestial Form</h1>
<% if @form_errors %>
  <% @form_errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @celestial do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :distance %>
    <%= f.text_field :distance %>
  </div>
  <div>
    <%= f.label :celestial_type %>
    <%= f.text_field :celestial_type %>
  </div>
  <div>
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>
  <div>
    <%= f.button "Add Celestial" %>
  </div>

<% end %>
