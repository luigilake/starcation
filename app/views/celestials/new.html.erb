<div class="form-container">
  <h1>New Celestial Form</h1>
  <% if @form_errors %>
    <% @form_errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <%= form_for @celestial do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :distance %>
      <%= f.text_field :distance %>
    </div>
    <div class="field">
      <%= f.label :celestial_type %>
      <%= f.collection_select(:celestial_type, @array_of_types, :first, :last) %>
    </div>
    <div class="field">
      <%= f.label :size %>
      <%= f.text_field :size %>
    </div>

    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>

    <div class="actions">
      <%= f.button "Add Celestial" %>
    </div>

  <% end %>
</div>
